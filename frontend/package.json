{
  "name": "rubic-ui",
  "version": "0.0.1",
  "main": "src/main.js",
  "license": "MIT",
  "author": "Neuron99 <neuron99@qubic.org>",
  "scripts": {
    "start": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite",
    "build": "vite build",
    "build-electron": "vite build && electron-builder",
    "build-mac": "vite build && electron-builder --mac --x64",
    "build-win": "vite build && electron-builder --win --x64",
    "build-linux": "vite build && electron-builder --linux --x64"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "dist/**/*",
      "src/preload.js",
      "src/*",
      "index.html",
      "*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/lab": "^7.0.0-beta.13",
    "@mui/material": "^7.1.1",
    "framer-motion": "^12.18.1",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "usehooks-ts": "^3.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
